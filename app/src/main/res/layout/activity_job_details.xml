<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/job1">

    <LinearLayout
        android:id="@+id/jobTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_background"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobTitleContainer"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="#777777"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:id="@+id/jobDescriptionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_background"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/companyName"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/jobDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/degreeRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobDescriptionContainer"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/jobLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/degreeRequired"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/jobLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />

</RelativeLayout>
