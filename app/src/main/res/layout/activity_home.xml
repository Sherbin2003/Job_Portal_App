<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/job1"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Lottie Animation View -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_launcher_background"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/job_search" />

        <!-- Post a Job Button -->
        <Button
            android:id="@+id/buttonPostJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_marginTop="16dp"
            android:background="#FF4081"
            android:padding="20dp"
            android:text="Post a Job"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- Job Listing Button -->
        <Button
            android:id="@+id/buttonSearchJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonPostJob"
            android:layout_marginTop="40dp"
            android:background="#FF4081"
            android:padding="20dp"
            android:text="Job Listing"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- Posted Jobs Button -->
        <Button
            android:id="@+id/buttonPostedJobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSearchJob"
            android:layout_marginTop="40dp"
            android:background="#FF4081"
            android:padding="20dp"
            android:text="Posted Jobs"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- Location Button -->
        <Button
            android:id="@+id/buttonLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonPostedJobs"
            android:layout_marginTop="40dp"
            android:background="#FF4081"
            android:padding="20dp"
            android:text="Location"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>
